{
  "name": "modular-typescript-app",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "A TypeScript project with lerna, microservices",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "registry":"http://localhost:4873"
  },
  "scripts": {
    "clean": "tsc --build ./tsconfig.json --clean && del ./dist ./.cache ./coverage ./.rpt2_cache ./*.tsbuildinfo",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --colors --coverage --detectOpenHandles",
    "test:watch": "CI=true jest --colors --watch --detectOpenHandles",
    "test:compiled": "jest --colors --config ./jest.config.compiled.js",
    "lint": "eslint . --fix",
    "lint:watch": "chokidar ./**/*.ts --initial --silent -c 'run-s lint'",
    "server": "node ./dist/bin/run.js",
    "server:watch": "nodemon -w ./ -x run-s server",
    "debug": "NODE_ENV=development DEBUG=* ts-node --inspect-brk ./src/bin/run.ts",
    "dev": "run-s clean build && concurrently --names 'BUILD,TEST,LINT,SERVER' -c 'yellow,cyan,blue,magenta' 'run-s build:watch' 'run-s test:watch' 'run-s lint:watch' 'run-s server:watch'",
    "start": "run-s clean build server",
    "format": "prettier --list-different --write '**/*.{ts,tsx,js,jsx,json,md,html}'",
    "format:check": "prettier --list-different --check '**/*.{ts,tsx,js,jsx,json,md,html}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoltan-nz/modular-typescript-app.git"
  },
  "author": "Zoltan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zoltan-nz/modular-typescript-app/issues"
  },
  "homepage": "https://github.com/zoltan-nz/modular-typescript-app#readme",
  "devDependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/cors": "^2.8.12",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.13",
    "@types/express-list-endpoints": "^6.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/superagent": "^4.1.13",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.3.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-list-endpoints": "^6.0.0"
  }
}
