{
  "name": "express-typescript-app",
  "version": "1.0.0",
  "description": "Express with TypeScript App Template",
  "main": "dist/bin/run.js",
  "scripts": {
    "clean": "tsc --build ./tsconfig.json --clean && del ./dist ./.cache ./coverage ./.rpt2_cache ./*.tsbuildinfo",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --colors --coverage",
    "test:watch": "CI=true jest --colors --watchAll",
    "test:compiled": "jest --colors --config ./jest.config.compiled.js",
    "lint": "eslint . --fix",
    "lint:watch": "chokidar ./**/*.ts --initial --silent -c 'run-s lint'",
    "server": "node ./dist/bin/run.js",
    "server:watch": "nodemon -w ./ -x run-s server",
    "debug": "NODE_ENV=development DEBUG=* ts-node --inspect-brk ./src/bin/run.ts",
    "dev": "concurrently --names 'BUILD,TEST,LINT,SERVER' -c 'yellow,cyan,blue,magenta' 'run-s build:watch' 'run-s test:watch' 'run-s lint:watch' 'run-s server:watch'",
    "start": "run-s clean build server",
    "format": "prettier --list-different --write '**/*.{ts,tsx,js,jsx,json,md,html}'",
    "format:check": "prettier --list-different --check '**/*.{ts,tsx,js,jsx,json,md,html}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoltan-nz/express-typescript-app.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zoltan-nz/express-typescript-app/issues"
  },
  "homepage": "https://github.com/zoltan-nz/express-typescript-app#readme",
  "devDependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.13",
    "@types/express-list-endpoints": "^6.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@types/superagent": "^4.1.12",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.2.1",
    "del-cli": "^4.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "jest": "^27.1.0",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.2",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-list-endpoints": "^6.0.0"
  }
}
