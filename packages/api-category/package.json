{
  "name": "@localhost/api-category",
  "version": "0.0.0",
  "description": "> TODO: description",
  "homepage": "https://github.com/zoltan-nz/modular-typescript-app/tree/main/apps/api-category#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "directories": {
    "lib": "dist",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoltan-nz/modular-typescript-app.git"
  },
  "bugs": {
    "url": "https://github.com/zoltan-nz/modular-typescript-app/issues"
  },
  "publishConfig": {
    "@localhost": "http://localhost:4873"
  },
  "scripts": {
    "clean": "tsc --build ./tsconfig.json --clean && del ./dist ./.cache ./coverage ./.rpt2_cache ./*.tsbuildinfo",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --colors --coverage --detectOpenHandles",
    "test:watch": "CI=true jest --colors --watch --detectOpenHandles",
    "test:compiled": "jest --colors --config ./jest.config.compiled.js",
    "lint": "eslint . --fix",
    "lint:watch": "chokidar ./**/*.ts --initial --silent -c 'run-s lint'",
    "server": "node ./dist/bin/run.js",
    "server:watch": "nodemon -w ./ -x run-s server",
    "debug": "NODE_ENV=development DEBUG=* ts-node --inspect-brk ./src/bin/run.ts",
    "dev": "run-s clean build && concurrently --names 'BUILD,TEST,LINT,SERVER' -c 'yellow,cyan,blue,magenta' 'run-s build:watch' 'run-s test:watch' 'run-s lint:watch' 'run-s server:watch'",
    "start": "run-s clean build server"
  },
  "dependencies": {
    "@localhost/express-application": "^0.0.0",
    "cors": "^2.8.5",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-list-endpoints": "^6.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13"
  },
  "gitHead": "edc5b7c96598e8cc850e9fd593a1e157e1ea09c2"
}
